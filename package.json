{
  "name": "n8n-nodes-chiliz",
  "version": "1.0.0",
  "description": "A comprehensive n8n community node for Chiliz Chain providing Fan Token operations, voting/polling, rewards, NFTs, and blockchain interactions for sports fan engagement.",
  "license": "BUSL-1.1",
  "author": {
    "name": "Velocity BPA",
    "email": "licensing@velobpa.com",
    "url": "https://velobpa.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Velocity-BPA/n8n-nodes-chiliz.git"
  },
  "homepage": "https://github.com/Velocity-BPA/n8n-nodes-chiliz#readme",
  "bugs": {
    "url": "https://github.com/Velocity-BPA/n8n-nodes-chiliz/issues"
  },
  "keywords": [
    "n8n",
    "n8n-community-node-package",
    "chiliz",
    "fan-tokens",
    "socios",
    "blockchain",
    "sports",
    "fan-engagement",
    "voting",
    "evm",
    "chz"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/ChilizApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Chiliz/Chiliz.node.js",
      "dist/nodes/Chiliz/ChilizTrigger.node.js"
    ]
  },
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.ts\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "ethers": "^6.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^4.0.2",
    "jest": "^29.7.0",
    "n8n-workflow": "^1.22.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "n8n-workflow": ">=1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
